<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CharcterDetialsFragment">

    <TextView
        android:id="@+id/chNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:text="Spider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charterdetailsIV" />

    <TextView
        android:id="@+id/discriptionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:text="Disc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chNameTV" />

    <TextView
        android:id="@+id/discTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:text="dasdasdasdasdasdasdasdasdasdasdasd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discriptionlabel" />

    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/charterdetailsIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"

        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>